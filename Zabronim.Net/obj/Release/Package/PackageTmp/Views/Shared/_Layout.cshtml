@model Zabronim.Net.Models.WClient

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="index, follow" />
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/Fonts.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/MainStyle.css" />
    <link href="~/Content/Images/icon.png" rel="shortcut icon" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.4.4.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @RenderSection("featured", required: false)
    <div class="body_wrapper">
        <table class="root_table" width="100%" cellspacing="0" cellpadding="0">
            <tr>
                <td class="root_table__top" align="center">
                    <div class="root_table__top__div">
                        <div class="max_width">
                            <i class="br20"></i>
                            <img src="/Content/Images/logo.png" width="205" height="56" />
                            <i class="br20"></i>
                        </div>
                        <div class="root_table__top__div__r">
                            <div class="max_width">
                                <img class="root_table__top__b__phone" src="/Content/Images/phone.png" width="347" height="460" />
                            </div>
                        </div>
                    </div>
                    <div class="root_table__top__b">
                        <div class="max_width root_table__top__b__max_width">
                            <i class="br40"></i>
                            <h1 class="root_table__top__b__title">Скоро забронировать столик<br />
                                и оплатить меню в любом<br />
                                ресторане или кафе<br />
                                станет ещё проще</h1>
                            <div class="root_table__top__b__form__w">
                                Введи электронный адрес и будь в курсе запуска сервиса<i class="br5"></i>
                                @using (Html.BeginForm("SumbitEmail", "Home", FormMethod.Post, new {
                                    @class = "root_table__top__b__form",
                                    @style = "border-color: #e5e5e5;"
                                })) {
                                    @Html.ValidationSummary(true)
                                    @Html.ValidationMessageFor(model => model.Email)
                                    <i class="br1"></i>
                                    @Html.TextBoxFor(model => model.Email, new { @size = "40", @class = "root_table__top__b__form__input", @placeholder = "Эл. почта" })
                                    <input style="margin-left: 9px;" type="submit" class="green_button" value="Отправить" />
                                }
                                <p style="background: #000; color: #fff;" class="elemThs">Спасибо за участие</p>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="root_table__middle" align="center">
                    @RenderBody()
                </td>
            </tr>
            <tr>
                <td align="center" class="root_table__bottom">
                    <i class="br40"></i>
                    <div class="footer_left">
                        © 2014 ООО «Заброним»<br />
                        Сервис по бронированию столиков<br />
                        Эл. почта: <a href="mailto:info@zabronim.ru">info@zabronim.ru</a><br />
                        <br />
                        Дизайн — Лекс Келлер
                    </div>
                    <div class="footer_right">
                        <a href="http://www.vk.com/zabronim" class="social-links">
                            <img src="../../Content/Images/icon-vk.png" alt="iconVK" />
                        </a>
                        @*<a href="http://www.facebook.com/zabronim" class="social-links">
                            <img src="../../Content/Images/icon-facebook.png" alt="iconFacebook" />
                        </a>
                        <a href="http://www.twitter.com/zabronim" class="social-links">
                            <img src="../../Content/Images/icon-twitter.png" alt="iconTwitter" />
                        </a>*@
                        <a href="http://www.linkedin.com/company/zabronim" class="social-links">
                            <img src="../../Content/Images/icon-linkedin.png" alt="iconlinkedin" />
                        </a>
                    </div>
                    <i class="br40"></i>
                </td>
            </tr>
        </table>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
